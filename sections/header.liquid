{
  "name": "Header",
  "settings": [
    {
      "type": "header",
      "content": "Announcement bar"
    },
    {
      "type": "paragraph",
      "content": "Only shown on desktop."
    },
    {
      "type": "richtext",
      "id": "announcement_text",
      "label": "Shop announcement",
      "default": "<p>Share a shop announcement or message</p>"
    },
